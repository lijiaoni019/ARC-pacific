/**index.wxss**/

@import "../template-dialog/dialog.wxss";


.user_page{
  display: flex; 
  flex-direction: column; 
  margin-bottom: 40rpx;
  padding-top: 60rpx ; 
  align-items: center; 
  background: white;
  box-shadow: 0 0 16px rgba(0,0,0,0.1);
  position:sticky;
  top: 0;
  
  }

  .user_page image{
    border-radius:50%;
    height:200rpx; 
    width:200rpx;
    margin-bottom: 16rpx;
  }

.container{
width: 100%;
height: fit-content;
display: flex;
flex-direction: column;
align-items: center;
padding-bottom: 150rpx;

}

.card{
  margin-top: 10rpx;
  border: 1px solid black;
  width: 90%;
  padding: 8rpx 8rpx;
  display:flex;
  justify-content: space-between;

}

.card-active{
  border: 1px solid red;
}

.submit_container{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 10%;
  background-color: white;
  display: flex;
  align-items: center;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.25);
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx ;
}

