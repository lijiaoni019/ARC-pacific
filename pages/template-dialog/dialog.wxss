.qd-dialog--container {
  position: fixed;
  top: 45%;
  left: 50%;
  width: 80%;
  height: 0;
  font-size: 16px;
  overflow: hidden;
  transition: all .2s linear;
  border-radius: 8px;
  background-color: #fff;
  transform: translate3d(-50%, -50%, 0);
  color: #333;
  opacity: 0;
  z-index: 1;

}

.qd-dialog--mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .6);
  transition: .3s;    /*can be removed? */
  display: none;   
  z-index: 1
}

.qd-dialog__header {
  padding: 15px 0 0;
  text-align: center;
  font-family: adorable;
  font-size: 40rpx;


}

.qd-dialog__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 24rpx auto;
 

}

.qd-dialog__content::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-bottom-width: 1px
}

.qd-dialog__content--title {
  color: #999;
  font-size: 14px
}

.qd-dialog__footer {
  overflow: hidden
}

.qd-dialog__button {
  line-height: 50px;
  height: 50px;
  padding: 0 5px;
  border-radius: 0;
  margin-bottom: 0;
  font-family: adorable;
  font-size: 48rpx;
  font-weight: lighter;
  
}

.qd-dialog__button::after {
  border-width: 0;
  border-radius: 0
}

.qd-dialog--show .qd-dialog--container {
  opacity: 1;
  margin-top: 40rpx;
  height: auto
}

.qd-dialog--show .qd-dialog--mask {
  display: block
}

.qd-dialog__footer--horizon {
  display: flex;
  
}

.qd-dialog__footer--horizon .qd-dialog__button {
  flex: 1;
 
}

.qd-dialog__footer--horizon .qd-dialog__button::after {
  border-right-width: 1px;
  
  
}

.qd-dialog__footer--horizon .qd-dialog__button:last-child::after {
  border-right-width: 0
}

.qd-dialog__footer--vertical .qd-dialog__button {
  flex: 1
}

.qd-dialog__footer--vertical .qd-dialog__button::after {
  border-bottom-width: 1px
}

.qd-dialog__footer--vertical .qd-dialog__button:last-child::after {
  border-bottom-width: 0
}

