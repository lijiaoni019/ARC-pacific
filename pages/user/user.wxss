/* pages/user/user.wxss */

.user_page{

  margin-bottom: 40rpx;
  padding-top: 60rpx ; 
  align-items: center; 
  background: white;
  box-shadow: 0 0 16px rgba(0,0,0,0.1);
  position:sticky;
  top: 0;
  
  }

  .user_page image{
    border-radius:50%;
    height:160rpx; 
    width:160rpx;
    margin: 0 24rpx
  }

  .user_info{
    display: flex;
    align-items: flex-end;
    padding-bottom: 24rpx;
  }

  .tab-container {
    display: flex;
    justify-content: space-around;
    padding: 64rpx 0 32rpx 0;
  }
  
  .tab-container .tab {
    width: 30%;
    text-align: center;
    padding-bottom: 32rpx;
    transition: all 0.3s ease;
    border-bottom: 4rpx solid white;
  }
  
  .tab-container .active {
    border-bottom: 4rpx solid #FFDE59;
  }

  .date_record{
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .btn_container{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 10%;
    background-color: white;
    display: flex;
    align-items: center;
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.25);
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx ;
  }
